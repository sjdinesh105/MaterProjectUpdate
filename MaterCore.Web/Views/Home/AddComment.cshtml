@model MaterCore.Web.Models.CommentDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Comment</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.BedId)
      
        <div class="form-group">
            @Html.LabelFor(model => model.NurseId, new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(model => model.NurseId, new List<SelectListItem>()
            {
                new SelectListItem(){ Text= "Kelly A", Value = "1"},
                new SelectListItem(){ Text= "Marry P", Value = "2"},

            }, "Select Nurse")

        </div>
        <div class="form-group">

            <label asp-for="Comments" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Comments" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Comment" class="btn btn-default"  style="background-color:lightblue!important"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a href=@Url.Action("Index", "Home")>Back to List</a>
</div>


